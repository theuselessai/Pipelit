# Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
ALLOWED_USER_IDS=123456789

# LLM Configuration
# Provider: openai, anthropic, or openai_compatible
LLM_PROVIDER=openai_compatible
LLM_MODEL=zai-org-glm-4.7
LLM_API_KEY=your_api_key
LLM_BASE_URL=http://127.0.0.1:8000/v1
LLM_TEMPERATURE=0.7

# Optional: use a cheaper model for message categorization
# CATEGORIZER_MODEL=

# Session management (optional - defaults shown)
# DB_PATH=sessions.db
# COMPRESS_RATIO=0.75
# KEEP_RECENT_MESSAGES=6
# DEFAULT_CONTEXT_WINDOW=128000

# Redis (for RQ background tasks)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0

# Task settings
# JOB_TIMEOUT=300

# Gateway settings (agent routing)
# GATEWAY_ENABLED=true
# CONFIRMATION_TIMEOUT_MINUTES=5
# CHROME_PROFILE_PATH=~/.config/agent-chrome-profile
# BROWSER_HEADLESS=true

# Optional FastAPI server
# API_ENABLED=false
# API_PORT=8080
